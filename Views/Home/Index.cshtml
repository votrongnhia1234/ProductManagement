@{
    ViewData["Title"] = "Trang chủ";
}

<style>

</style>

<div class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Shop đồ công nghệ</h1>
            <p class="hero-subtitle">Hệ thống quản lý sản phẩm và bán hàng trực tuyến hiện đại</p>
            <div class="hero-buttons">
                <a href="#features" class="btn-hero btn-primary-hero">
                    <i class="fas fa-info-circle me-2"></i>Tìm hiểu thêm
                </a>
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn-hero btn-secondary-hero">
                    <i class="fas fa-shopping-cart me-2"></i>Mua sắm ngay
                </a>
            </div>
        </div>
    </div>
</div>

<div class="features-section" id="features">
    <div class="container">
        <div class="section-title">
            <h2>Tính năng nổi bật</h2>
            <p>Khám phá các công cụ mạnh mẽ giúp quản lý doanh nghiệp của bạn hiệu quả hơn</p>
        </div>

        <div class="features-grid">
            <div class="feature-card fade-in-up delay-1">
                <div class="feature-icon icon-primary">
                    <i class="fas fa-users"></i>
                </div>
                <h3 class="feature-title">Quản lý người dùng</h3>
                <p class="feature-description">Quản lý tài khoản và phân quyền người dùng trong hệ thống một cách hiệu
                    quả và bảo mật.</p>
                <div class="feature-action">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn-feature btn-primary">
                            <i class="fas fa-arrow-right"></i>Truy cập
                        </a>
                    }
                    else
                    {
                        <span class="access-denied">
                            <i class="fas fa-lock"></i>Cần quyền Admin
                        </span>
                    }
                </div>
            </div>

            <div class="feature-card fade-in-up delay-2">
                <div class="feature-icon icon-success">
                    <i class="fas fa-box"></i>
                </div>
                <h3 class="feature-title">Quản lý sản phẩm</h3>
                <p class="feature-description">Thêm, sửa, xóa sản phẩm và quản lý danh mục với giao diện trực quan và dễ
                    sử dụng.</p>
                <div class="feature-action">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn-feature btn-success">
                            <i class="fas fa-arrow-right"></i>Truy cập
                        </a>
                    }
                    else
                    {
                        <span class="access-denied">
                            <i class="fas fa-lock"></i>Cần quyền Admin
                        </span>
                    }
                </div>
            </div>

            <div class="feature-card fade-in-up delay-3">
                <div class="feature-icon icon-info">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <h3 class="feature-title">Cửa hàng</h3>
                <p class="feature-description">Mua sắm sản phẩm và quản lý đơn hàng của bạn với trải nghiệm mua sắm
                    tuyệt vời.</p>
                <div class="feature-action">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn-feature btn-info">
                        <i class="fas fa-shopping-bag"></i>Mua sắm ngay
                    </a>
                </div>
            </div>
        </div>

        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <div class="admin-section">
                <div class="section-title">
                    <h2>Công cụ quản lý nâng cao</h2>
                    <p>Các công cụ dành riêng cho quản trị viên và người quản lý</p>
                </div>
                <div class="features-grid">
                    <div class="feature-card fade-in-up delay-1">
                        <div class="feature-icon icon-warning">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h3 class="feature-title">Quản lý đơn hàng</h3>
                        <p class="feature-description">Theo dõi và xử lý đơn hàng của khách hàng với dashboard thống kê chi
                            tiết.</p>
                        <div class="feature-action">
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="btn-feature btn-warning">
                                    <i class="fas fa-crown me-1"></i>Admin Panel
                                </a>
                            }
                            @if (User.IsInRole("Manager"))
                            {
                                <a asp-area="Manager" asp-controller="Order" asp-action="Index" class="btn-feature btn-warning">
                                    <i class="fas fa-user-tie me-1"></i>Manager Panel
                                </a>
                            }
                        </div>
                    </div>

                    <div class="feature-card fade-in-up delay-2">
                        <div class="feature-icon icon-secondary">
                            <i class="fas fa-tags"></i>
                        </div>
                        <h3 class="feature-title">Quản lý danh mục</h3>
                        <p class="feature-description">Tạo và quản lý danh mục sản phẩm để tổ chức cửa hàng một cách khoa
                            học.</p>
                        <div class="feature-action">
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-area="Admin" asp-controller="Category" asp-action="Index"
                                    class="btn-feature btn-secondary">
                                    <i class="fas fa-arrow-right"></i>Truy cập
                                </a>
                            }
                            else
                            {
                                <span class="access-denied">
                                    <i class="fas fa-lock"></i>Cần quyền Admin
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/main/Home/index.css" />
}