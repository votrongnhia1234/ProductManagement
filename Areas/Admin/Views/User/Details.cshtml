@model UserDetailsViewModel
@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<div class="admin-page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="admin-page-title">
                <i class="fas fa-user me-2"></i>Chi tiết người dùng
            </h1>
            <p class="admin-page-subtitle">Thông tin chi tiết và quản lý tài khoản</p>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="admin-content-section">
            <h5 class="mb-4"><i class="fas fa-info-circle me-2"></i>Thông tin cá nhân</h5>

            <div class="row mb-3">
                <div class="col-sm-3"><strong>ID:</strong></div>
                <div class="col-sm-9">
                    <code>@Model.Id</code>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3"><strong>Họ tên:</strong></div>
                <div class="col-sm-9">@Model.FullName</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3"><strong>Email:</strong></div>
                <div class="col-sm-9">
                    <a href="mailto:@Model.Email">@Model.Email</a>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3"><strong>Địa chỉ:</strong></div>
                <div class="col-sm-9">@(Model.Address ?? "Chưa cập nhật")</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3"><strong>Vai trò:</strong></div>
                <div class="col-sm-9">
                    @foreach (var role in Model.Roles)
                    {
                        <span class="badge bg-@(GetRoleBadgeClass(role)) me-1">@role</span>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3"><strong>Trạng thái:</strong></div>
                <div class="col-sm-9">
                    <span class="badge bg-@(Model.IsActive ? "success" : "secondary")">
                        @(Model.IsActive ? "Hoạt động" : "Vô hiệu hóa")
                    </span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3"><strong>Ngày tạo:</strong></div>
                <div class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3"><strong>Đăng nhập cuối:</strong></div>
                <div class="col-sm-9">
                    @if (Model.LastLoginAt.HasValue)
                    {
                        @Model.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")
                    }
                    else
                    {
                        <span class="text-muted">Chưa đăng nhập</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="admin-content-section">
            <h5 class="mb-4"><i class="fas fa-cogs me-2"></i>Thao tác</h5>

            <div class="d-grid gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Chỉnh sửa thông tin
                </a>

                <form asp-action="ToggleStatus" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-@(Model.IsActive ? "secondary" : "success") w-100"
                            onclick="return confirm('@(Model.IsActive ? "Vô hiệu hóa" : "Kích hoạt") người dùng này?')">
                        <i class="fas fa-@(Model.IsActive ? "ban" : "check") me-2"></i>
                        @(Model.IsActive ? "Vô hiệu hóa" : "Kích hoạt")
                    </button>
                </form>

                <form asp-action="ResetPassword" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-info w-100"
                            onclick="return confirm('Reset mật khẩu cho người dùng này?')">
                        <i class="fas fa-key me-2"></i>Reset mật khẩu
                    </button>
                </form>

                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger w-100"
                            onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này? Hành động này không thể hoàn tác!')">
                        <i class="fas fa-trash me-2"></i>Xóa người dùng
                    </button>
                </form>
            </div>
        </div>

        <div class="admin-content-section mt-3">
            <h5 class="mb-3"><i class="fas fa-chart-bar me-2"></i>Thống kê</h5>

            <div class="text-center">
                <div class="mb-3">
                    <h3 class="text-primary mb-0">@Model.OrderCount</h3>
                    <small class="text-muted">Tổng đơn hàng</small>
                </div>

                <a asp-area="Manager" asp-controller="Order" asp-action="Index"
                   asp-route-searchTerm="@Model.Email" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-shopping-cart me-1"></i>Xem đơn hàng
                </a>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "danger",
            "Manager" => "warning",
            "Customer" => "primary",
            _ => "secondary"
        };
    }
}
