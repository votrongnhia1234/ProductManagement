@model ProductDetailsViewModel
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="admin-page-title">
                <i class="fas fa-box-open me-2"></i>Chi tiết sản phẩm: @Model.ProductName
            </h1>
            <p class="admin-page-subtitle">Thông tin chi tiết về sản phẩm</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </a>
        </div>
    </div>
</div>

<div class="admin-content-section">
    <dl class="row">
        <dt class="col-sm-3">Mã sản phẩm:</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">Tên sản phẩm:</dt>
        <dd class="col-sm-9">@Model.ProductName</dd>

        <dt class="col-sm-3">Mô tả:</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Giá:</dt>
        <dd class="col-sm-9">@Model.Price.ToString("N0") VNĐ</dd>

        <dt class="col-sm-3">Danh mục:</dt>
        <dd class="col-sm-9">@Model.CategoryName</dd>

        <dt class="col-sm-3">Hình ảnh:</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.ImgUrl))
            {
                <img src="@Url.Content(Model.ImgUrl)" alt="@Model.ProductName" class="img-thumbnail" style="max-width: 200px;" />
            }
            else
            {
                <span>Chưa có hình ảnh</span>
            }
        </dd>

        <dt class="col-sm-3">Ngày tạo:</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3">Ngày cập nhật:</dt>
        <dd class="col-sm-9">@(Model.UpdatedAt == default(DateTime) ? "Chưa cập nhật" : Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm"))</dd>
    </dl>

    <div class="mt-4">
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?');">
                <i class="fas fa-trash-alt me-2"></i>Xóa sản phẩm
            </button>
        </form>
    </div>
</div> 