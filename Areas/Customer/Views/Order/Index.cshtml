@model ProductManagement.Areas.Customer.Models.CustomerOrderListViewModel
@{
    ViewData["Title"] = "Đơn hàng của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ProductManagement.Extensions

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (Model.Orders == null || !Model.Orders.Any())
    {
        <div class="alert alert-info" role="alert">
            Bạn chưa có đơn hàng nào.
        </div>
    }
    else {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Mã đơn hàng</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th>Số lượng sản phẩm</th>
                    <th>Mã vận đơn</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@order.TotalAmount.ToString("N0") VNĐ</td>
                        <td>
                             <span class="badge bg-@(order.Status switch {
                                 OrderStatus.Pending => "secondary",
                                 OrderStatus.Confirmed => "primary",
                                 OrderStatus.Processing => "info",
                                 OrderStatus.Shipped => "warning",
                                 OrderStatus.Delivered => "success",
                                 OrderStatus.Cancelled => "danger",
                                 _ => "secondary"
                             })">
                                 @order.Status.GetDisplayName()
                             </span>
                        </td>
                        <td>@order.ItemCount</td>
                        <td>@(string.IsNullOrEmpty(order.TrackingNumber) ? "Chưa có" : order.TrackingNumber)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">Xem chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @* Add pagination here if needed based on CustomerOrderListViewModel structure *@
    }
</div> 